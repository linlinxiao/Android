<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2299EE"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/registerBack"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:src="@drawable/jianjieback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="平安百宝箱注册平台"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jiHuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        android:padding="20dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="手机号码"
                android:textSize="15sp" />

            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gold_white"
                android:hint="11位大陆地区手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="#DEDEDE" 
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="真实姓名"
                android:textSize="15sp" />

            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/et_real_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gold_white"
                android:hint="请填入您的真实姓名"
                android:inputType="text"
                android:maxLength="11"
                android:textColorHint="#DEDEDE" 
                android:paddingLeft="10dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="验  证  码"
                android:textSize="15sp" />


                <EditText
					android:layout_marginLeft="10dp"
                    android:text="88888888"
                    android:id="@+id/yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:maxLength="9"
                    android:background="@drawable/gold_white" 
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/registerGetYanZhengMa"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/agent_setbtn"
                    android:text="点击获取"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="设置密码"
                android:textSize="15sp" />

            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gold_white"
                android:hint="6-15位非纯数字"
                android:inputType="textPassword"
                android:maxLength="15"
                android:textColorHint="#DEDEDE" 
                android:paddingLeft="10dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textSize="15sp" />

            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gold_white"
                android:maxLength="15"
                android:password="true" 
                android:hint="6-15位非纯数字"
                android:textColorHint="#DEDEDE" 
                android:paddingLeft="10dp"/>
        </LinearLayout>

       

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >

            <TextView
                android:id="@+id/confirmRegister"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/agent_setbtn"
                android:gravity="center"
                android:text="确认注册"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <CheckBox
                android:layout_marginTop="30dp"
                android:id="@+id/readXieYi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意《平安百宝箱服务协议》" 
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>