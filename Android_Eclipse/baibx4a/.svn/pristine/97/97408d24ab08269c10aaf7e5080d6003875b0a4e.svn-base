<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#E5E5E5" >

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2299EE"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/xinLiJianJieBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/jianjieback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:text="鑫利简介"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/shouHuXingMenu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="#E5E5E5"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@drawable/xinli_jianjie" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E5E5E5"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="鑫利产品视频"
                android:textColor="#FC2627"
                android:textSize="15sp"
                android:background="#E5E5E5"                
                />
	        <WebView
	            android:id="@+id/xinLiVideo"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="5"
            android:layout_marginBottom="10dp"	            
	            android:scrollbars="none"
	            />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/baoXianLiNianShaoEr"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="少儿保险理念"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/baoXianLiNianChengRen"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="成人保险理念"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="10sp"
            />
        <TextView 
            android:id="@+id/touBaoGuiZe"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="投保规则"
			android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:gravity="center"
            android:textSize="10sp"
            />
        <TextView 
            android:id="@+id/chanPinTeSe"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="产品特色"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:gravity="center"
            android:textSize="10sp"
            />
        <TextView 
            android:id="@+id/sheJiJiHuaShu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="设计计划书"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:gravity="center"
            android:textSize="10sp"
            />
    </LinearLayout>

</LinearLayout>