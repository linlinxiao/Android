<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#E5E5E5" >

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#2299EE"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/huShenFuJianJieBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/jianjieback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:text="智悦人生简介"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/shouHuXingMenu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content1"
        android:layout_margin="15dp"
        android:layout_below="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
	<ImageView
	    android:layout_weight="1"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:src="@drawable/zyrs_introduction"/>
	<TextView
	    android:layout_weight="1"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_gravity="center_vertical"
	    android:textSize="16sp"
	    android:text="让保额依照自己的需求而调整，让保障根据我的人生而规划，聆听内心，自主选择方能获得称心的结果，就像智悦人生，实现“我的保障我做主”。"/>
    </LinearLayout>
   <ImageView
       android:layout_marginLeft="55dp"
       android:layout_marginRight="55dp"
       android:layout_centerHorizontal="true"
       android:id="@+id/iv_fit"
       android:layout_below="@+id/ll_content1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/zyrs_fit"/>
   	<WebView
   	   android:layout_below="@+id/iv_fit"
   	   android:layout_alignParentBottom="true"
   	   android:layout_marginBottom="70dp"
       android:id="@+id/children_video"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none"
       />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:id="@+id/baoXianLiNian"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="保险理念"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:layout_marginRight="5dp"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/touBaoGuiZe"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="投保规则"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/chanPinTeSe"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="产品特色"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/sheJiJiHuaShu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="设计计划书"
            android:textColor="#FFFFFF"
            android:background="@drawable/hushenfu_jianjiebutton"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>