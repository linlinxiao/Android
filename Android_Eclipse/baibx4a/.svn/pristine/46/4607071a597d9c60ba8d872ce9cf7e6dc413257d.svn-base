<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2299EE"
        android:orientation="horizontal" >

        <!--
             <ImageView
            android:id="@+id/weiHuBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="12dp"
            android:layout_weight="0.5"
            android:src="@drawable/baoxianproductback" />
        -->

        <ImageView
            android:id="@+id/weiHuBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/jianjieback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="关于百宝箱"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:paddingTop="35dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical" >

        <EditText 
            android:id="@+id/modify_pwd_opwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:background="@drawable/corner_edittext"
            android:hint="请输入原密码"
            android:textColorHint="#BBB"
            android:textSize="17sp"/>
        <EditText 
            android:id="@+id/modify_pwd_npwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:background="@drawable/corner_edittext"
            android:layout_marginTop="15dp"
            android:hint="请输入新密码"
            android:textColorHint="#BBB"
            android:textSize="17sp"/>
        <EditText 
            android:id="@+id/modify_pwd_n2pwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:background="@drawable/corner_edittext"
            android:layout_marginTop="15dp"
            android:hint="请再次输入新密码"
            android:textColorHint="#BBB"
            android:textSize="17sp"/>
        
        <Button 
            android:id="@+id/modify_pwd_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/corner_btn"
            android:layout_marginTop="35dp"
            android:textColor="#FFF"
            android:text="@string/str_resume"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>