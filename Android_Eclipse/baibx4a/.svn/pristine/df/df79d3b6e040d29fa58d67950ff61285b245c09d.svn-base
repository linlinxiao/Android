<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2299EE"
        android:orientation="horizontal" >
        
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="维护"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        
        
    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="12"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
            
            <LinearLayout 
                android:id="@+id/update"
                android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:orientation="horizontal"
	            android:layout_marginBottom="7dp"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_account" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="系统更新" />
				
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:orientation="vertical"
	            android:background="#C2C2C2"
                ></LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/alter"
                android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:orientation="horizontal"
	            android:layout_marginBottom="7dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="修改密码" />
				
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:orientation="vertical"
	            android:background="#C2C2C2"
                ></LinearLayout>
            
             <LinearLayout 
                android:id="@+id/backUp"
                android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="7dp"
	            android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_collection" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备份恢复" />
				
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:orientation="vertical"
	            android:background="#C2C2C2"
                ></LinearLayout>
             <LinearLayout 
                android:id="@+id/pay"
                android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="7dp"
	            android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_agent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="软件付费" />
				
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:orientation="vertical"
	            android:background="#C2C2C2"
                ></LinearLayout>
            
             <LinearLayout 
                android:id="@+id/about"
                android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:orientation="horizontal"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="7dp"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_gold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="关于百宝箱" />
				
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:orientation="vertical"
	            android:background="#C2C2C2"
                ></LinearLayout>
        </LinearLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView 
            android:id="@+id/safeExit"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:text="安全退出"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#AD0200"
            />
        </RelativeLayout>

    </LinearLayout>
    
</LinearLayout>