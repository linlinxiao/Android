<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox android:textSize="12sp"
            android:id="@+id/cb_mycard_right_row8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="CMF营销员荣誉编辑完成-8"
            android:textColor="#000000" />

        <CheckBox android:textSize="12sp"
            android:id="@+id/cb_mycard_left_row8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="没有该项荣誉"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mycard_row8"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/mycard_back" >

        <ImageView
            android:id="@+id/iv_mycard_p8_v1"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/mycard_p3_v1"
            android:clickable="true"
            android:onClick="p8_v1" />

        <ImageView
            android:id="@+id/iv_mycard_p8_v2"
            android:layout_width="156dp"
            android:layout_height="82dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/mycard_p8_v2"
            android:clickable="true"
            android:onClick="p8_v2" />

        <ImageView
            android:id="@+id/iv_mycard_p8_v3"
            android:layout_width="156dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/iv_mycard_p8_v2"
            android:layout_below="@+id/iv_mycard_p8_v2"
            android:layout_marginTop="5dp"
            android:background="@drawable/mycard_p8_v3"
            android:clickable="true"
            android:onClick="p8_v3" />

        <TextView
            android:id="@+id/tv_p8_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="180dp"
            android:clickable="true"
            android:onClick="p8_t1"
            android:text="可编辑"
            android:textColor="#ff8d09"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_p8_t2"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_mycard_p8_v1"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:onClick="p8_t2"
            android:text="可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>