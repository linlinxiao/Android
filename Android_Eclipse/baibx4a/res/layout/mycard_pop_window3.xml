<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#887f7f7f"
    xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_margin="30dp"
	    android:layout_centerInParent="true"
	    android:background="@drawable/mycard_pop_back">
	    <TextView 
	        android:id="@+id/mycard_pop_title"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center"
	        android:textSize="20sp"
	        android:textColor="#272727"
	        android:text="123123"/>
		<View android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#d3d2d6"/>
	    <EditText 
	        android:id="@+id/et_pop_editer"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_vertical"
	        android:textSize="15sp"
	        android:textColor="#575757"
	        android:paddingLeft="15dp"
	        android:text=""
	        android:hint="可编辑"
	        android:background="@null"/>
	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <LinearLayout
	            android:id="@+id/ll_mycard_pop_content"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical">
	        </LinearLayout>
	    </ScrollView>
		<View android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#d3d2d6"/>
	    <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    <Button 
		        android:id="@+id/bt_pop_cancle"
		        android:layout_width="0dp"
		        android:layout_height="45dp"
		        android:layout_weight="1"
		        android:background="@null"
		        android:text="取消"
		        android:layout_marginRight="1dp"/>
			<View android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:background="#d3d2d6"/>
		    <Button 
		        android:id="@+id/bt_pop_ok"
		        android:layout_width="0dp"
		        android:layout_height="45dp"
		        android:layout_weight="1"
		        android:background="@null"
		        android:layout_marginLeft="1dp"
		        android:text="确定"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>