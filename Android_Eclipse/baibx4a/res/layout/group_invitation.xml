<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InvitationA" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2299EE"
        android:orientation="horizontal" >

        <!-- <ImageView
            android:id="@+id/InvitaBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="14dp"
            android:layout_weight="0.5"
            android:src="@drawable/baoxianproductback" /> -->
        
        <ImageView
            android:id="@+id/InvitaBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/jianjieback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="邀约话术"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        
        <ImageView 
            android:id="@+id/addHuaShu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:src="@drawable/group_addinvita"
            />
    </LinearLayout>

     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        >

        <ListView
            android:id="@+id/lvInvita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>
        
    </LinearLayout>
    
</LinearLayout>
