<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
	        android:id="@+id/title1"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="#2299EE"
	        android:orientation="horizontal" >
        <ImageView
			android:onClick="visit_lette_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/jianjieback" />
        <TextView android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="邀请函编辑"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <TextView
            android:onClick="preView"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="预览"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            />
    </RelativeLayout>
	<ScrollView android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#efeff4">
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			<View 
			    android:layout_marginTop="15dp"
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="45dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="主题"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView
		            android:id="@+id/et_subject"
		            android:onClick="subject"
		            android:clickable="true"
		            android:text="拜访函"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"/>
		        <ImageView
		            android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
			<View 
			    android:layout_marginTop="20dp"
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="拜访函信息"
		            android:paddingLeft="15dp"
		            android:textSize="14sp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView
		            android:text="被拜访人姓名"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView
		            android:id="@+id/et_guestName1"
		            android:onClick="guestName1"
		            android:clickable="true"
		            android:text="XXX"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"/>
		        <ImageView
		            android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
			<RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:minHeight="44dp"
		        android:background="#ffffff">
		        <TextView
		            android:text="拜访时间"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView
		            android:id="@+id/et_time"
		            android:onClick="time"
		            android:clickable="true"
		            android:text="具体时间请予以安排，期待您的回复。"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="left|center_vertical"
		            android:layout_width="180dp"
		            android:layout_height="match_parent"
		            android:hint="请输入姓名"/>
		        <ImageView
		            android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
					    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="拜访人身份"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_guestOther1"
		            android:onClick="guestOther1"
		            android:clickable="true"
		            android:text="你的保险顾问"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:minHeight="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="拜访函内容"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_content"
		            android:onClick="content"
		            android:clickable="true"
		            android:text="你好！\n很高兴能认识您，并和您讨论您家人的保险计划，我真诚希望尽我所能为您和您的家人提供专业的保险理财服务。我在近期内会前往贵公司附近做客户服务，也很希望能拜访您。"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="left|center_vertical"
		            android:layout_width="180dp"
		            android:textSize="12sp"
		            android:layout_height="match_parent"/>
		        <ImageView
		            android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
			<RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="110dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="拜访人二维码"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <ImageView 
		            android:id="@+id/iv_guestImage1"
		            android:onClick="guestImage1"
		            android:clickable="true"
		            android:layout_marginRight="26dp"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:background="@drawable/visit_lette"
		            android:layout_width="100dp"
		            android:layout_height="100dp"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:onClick="guestImage1"
		            android:clickable="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>