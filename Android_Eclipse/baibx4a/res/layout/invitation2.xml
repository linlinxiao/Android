<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
	        android:id="@+id/title1"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="#2299EE"
	        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/newsBack"
            android:onClick="invitation_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/jianjieback" />
        <TextView android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="邀请函编辑"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <TextView
            android:onClick="preView"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="预览"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    
	<ScrollView android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#efeff4">
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			<View 
			    android:layout_marginTop="15dp"
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="45dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="主题"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_subject"
		            android:onClick="subject"
		            android:clickable="true"
		            android:text="优才创业说明会"
		            android:paddingRight="15dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:hint="请输入主题"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
			<View 
			    android:layout_marginTop="20dp"
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="被邀请人资料"
		            android:paddingLeft="15dp"
		            android:textSize="14sp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="被邀请人姓名"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_invitaName"
		            android:onClick="invitaName"
		            android:clickable="true"
		            android:text="王长田"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:hint="请输入姓名"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="姓别"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <RadioGroup 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:orientation="horizontal"
		            android:layout_marginRight="15dp">
		            <RadioButton 
		                android:id="@+id/rb_male"
		                android:button="@null"
		                android:paddingLeft="30dp"
		                android:background="@drawable/mycard_rb_selector"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginRight="20dp"
		                android:checked="true"
		                android:textColor="#2299ee"
		                android:textSize="13sp"
		                android:text="男"/>
		            <RadioButton 
		                android:id="@+id/rb_female"
		                android:button="@null"
		                android:paddingLeft="30dp"
		                android:background="@drawable/mycard_rb_selector"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="#888888"
		                android:textSize="14sp"
		                android:text="女"/>
		        </RadioGroup>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="参会时间"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_time"
		            android:onClick="time"
		            android:clickable="true"
		            android:text="2016年5月13日 16:59"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:hint="请输入参会时间"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="参会地址名称"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView
		            android:id="@+id/et_addressName"
		            android:onClick="addressName"
		            android:clickable="true"
		            android:text="平安培训中心"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:hint="请输入参会地址名称"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="参会地址"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_address"
		            android:onClick="address"
		            android:clickable="true"
		            android:text="中国平安人寿保险股份有限公司培训中心"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="175dp"
		            android:layout_height="match_parent"
		            android:hint="请输入参会地址"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
			<View 
			    android:layout_marginTop="20dp"
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="主讲嘉宾资料"
		            android:paddingLeft="15dp"
		            android:textSize="14sp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <RadioGroup 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:orientation="horizontal"
		            android:layout_marginRight="15dp">
		            <RadioButton 
		                android:id="@+id/rb_appear"
		                android:button="@null"
		                android:paddingLeft="30dp"
		                android:background="@drawable/mycard_rb_selector"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginRight="20dp"
		                android:checked="true"
		                android:textColor="#2299ee"
		                android:textSize="13sp"
		                android:text="出现"/>
		            <RadioButton 
		                android:id="@+id/rb_no_appear"
		                android:button="@null"
		                android:paddingLeft="30dp"
		                android:background="@drawable/mycard_rb_selector"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="#888888"
		                android:textSize="14sp"
		                android:text="不出现"/>
		        </RadioGroup>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="110dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="主讲嘉宾头像"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <com.baoxiao.view.RoundImageView 
		            android:id="@+id/iv_guestImage1"
		            android:onClick="guestImage1"
		            android:clickable="true"
		            android:layout_marginRight="26dp"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:background="@drawable/mycard_head"
		            android:layout_width="100dp"
		            android:layout_height="100dp"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:onClick="guestImage1"
		            android:clickable="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="主讲嘉宾姓名"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_guestName1"
		            android:onClick="guestName1"
		            android:clickable="true"
		            android:text="张伟"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:hint="请输主讲嘉宾姓名"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="44dp"
		        android:background="#ffffff">
		        <TextView 
		            android:text="主讲嘉宾简介"
		            android:paddingLeft="15dp"
		            android:textSize="17sp"
		            android:textColor="#000000"
		            android:layout_centerVertical="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/et_guestOther1"
		            android:onClick="guestOther1"
		            android:clickable="true"
		            android:text="中国平安人寿保险股份有限公司培训中心"
		            android:paddingRight="26dp"
		            android:textColor="#888888"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:gravity="right|center_vertical"
		            android:layout_width="175dp"
		            android:layout_height="match_parent"
		            android:textSize="12sp"
		            android:hint="请输入嘉宾简介"/>
		        <ImageView android:layout_width="8dp"
		            android:layout_height="16dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="12dp"
		            android:layout_centerVertical="true"
		            android:src="@drawable/arrow_right"/>
		    </RelativeLayout>
			<View 
			    android:layout_marginBottom="50dp"
			    android:layout_width="match_parent" 
			    android:layout_height="1px"
			    android:background="#d9d9d9"/>
			
		</LinearLayout>
	</ScrollView>
</LinearLayout>