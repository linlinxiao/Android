	    	android:layout_height="0dp"
	    	android:layout_weight="1"
	    	android:layout_marginLeft="20dp" 
	    	android:layout_marginTop="2dp" 
	    	android:layout_marginBottom="2dp" 
	    	>
	        <CheckBox
	            android:checked="true"
	            android:id="@+id/ifuse" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginLeft="5dip"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:text="抵平安百宝箱年费"
	            android:textColor="#737373"
	            android:textSize="12sp"
	            android:layout_marginLeft="5dip"/>
	        <TextView
	            android:layout_margin="10dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:text="￥"
	            android:textColor="#2299EE"
	            android:textSize="15sp" />
	        
	        <TextView
	            android:id="@+id/dichong"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:gravity="center"
	            android:text="0"
	            android:textColor="#2299EE"
	            android:textSize="15sp" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:text="元"
	            android:textSize="15sp" />
	    </LinearLayout>
		<View 
		    android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#8E8E8E"/>
	    
		<LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="3"
	    	android:layout_margin="10dp"
	    	android:orientation="vertical"
	    	android:background="@drawable/edittext_back1">
	    <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1">
	        
	        <TextView
	            android:layout_width="100dip"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="right"
	            android:text="应付："
	            android:textSize="15sp" />
	        <TextView
	            android:layout_marginLeft="50dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:text="￥"
	            android:textColor="#2299EE"
	            android:textSize="15sp" />
	        
	        <TextView
	            android:id="@+id/tv_amount"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="right"
	            android:text="0"
	            android:textSize="15sp" 
	            android:textColor="#2299EE"/>

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="元"
	            android:textSize="15sp"
	            android:layout_marginLeft="20dp"/>
	    </LinearLayout>
		<LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1">
		    			
	        
	        <TextView
	            android:layout_width="100dip"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="right"
	            android:text="-	优	惠："
	            android:textSize="15sp" />
			<TextView
	            android:layout_marginLeft="50dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:text="￥"
	            android:textColor="#2299EE"
	            android:textSize="15sp" />
	        <TextView
	            android:id="@+id/jybaotext"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="right"
	            android:text="0"
	            android:textColor="#2299EE"
	            android:textSize="15sp" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="元"
	            android:layout_marginLeft="20dip"
	            android:textSize="15sp" />
	    </LinearLayout>	    
			    
	    <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1">

	        <TextView
	            android:layout_width="100dip"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:gravity="right"
	            android:text="=	实	付："
	            android:textSize="15sp" />
			<TextView
	            android:layout_marginLeft="50dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:text="￥"
	            android:textColor="#2299EE"
	            android:textSize="15sp" />
	        
	        <TextView
	            android:id="@+id/money"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="right"  
	            android:text="260"
	            android:textColor="#2299EE"
	            android:textSize="15sp" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:text="元"
	            android:layout_marginLeft="20dip"
	            android:textSize="15sp" />
	    </LinearLayout>
	    </LinearLayout>
	    <View 
		    android:layout_width="match_parent"
        	android:layout_height="1px"
        	android:background="#8E8E8E"/>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:layout_margin="10dip">

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/pay_logo"
	            android:layout_gravity="center_vertical"
	            />
	        <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_margin="2dip"
	            android:layout_gravity="center_vertical">
	        	<LinearLayout android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content">
	            <TextView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="通联支付"
	                android:textSize="16sp"
	                android:textColor="#242424"/>
	        	<TextView android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="(四大实力支付平台之一)"
	        	    android:textSize="12sp"/>
	        	</LinearLayout>
	        	<TextView android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="支持国内上百家银行储蓄卡信用卡，无需开通网银无需支付宝，快速安全支付"
	        	    android:textSize="11sp"
	        	    android:textColor="#737373"
	        	    />
	        </LinearLayout>
	    </LinearLayout>
	    <Button android:layout_width="match_parent"
            android:layout_height="40dip" android:layout_margin="10dip"
            android:onClick="tijiao"
            android:text="提交订单"
            android:background="@drawable/btn_selecter"/>
	</LinearLayout>

</LinearLayout>
