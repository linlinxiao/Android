<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/floatBottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/productZeRen"
        style="@style/bottoFloatTV"
        android:background="@drawable/zyrs_bottom"
        android:text="保险责任" />
    
    <TextView
        android:id="@+id/zeRenMianChu"
        style="@style/bottoFloatTV"
        android:background="@drawable/zyrs_bottom"
        android:text="责任免除" />
    
     <TextView
        android:id="@+id/wanNengTeSe"
        style="@style/bottoFloatTV"
        android:background="@drawable/zyrs_bottom"
        android:text="万能特色" />
     
     <TextView
        android:id="@+id/liShiLiLv"
        style="@style/bottoFloatTV"
        android:background="@drawable/zyrs_bottom"
        android:text="历史利率" />
     
     <TextView
        android:id="@+id/zhiChanGuanLi"
        style="@style/bottoFloatTV"
        android:background="@drawable/zyrs_bottom"
        android:text="资产管理" />

    <TextView
        android:id="@+id/wanNengTouZi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/zyrs_bottom"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="万能和投资" />


    <TextView
        android:id="@+id/canBaoTiShi"
        style="@style/bottoFloatTV"
