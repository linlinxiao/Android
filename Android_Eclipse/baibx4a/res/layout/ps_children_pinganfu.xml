<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#E5E5E5" >

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2299EE"
        android:orientation="horizontal" >

        <ImageView
            android:onClick="pingAnFuJianJieBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/jianjieback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:text="少儿平安福简介"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/shouHuXingMenu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="#E5E5E5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/children_pinganfu_jianjie" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/children_pinganfu_left_icon"/>
				<TextView
				    android:layout_gravity="center_vertical"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dip"
	                android:text="产品简介"
	                android:textSize="15sp"
	                />
	        </LinearLayout>
	        <View
	            android:layout_marginTop="10dip"
	            android:layout_marginBottom="10dip"
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@android:color/darker_gray"
	            />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
			<TextView 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="平安福作为平安人寿旗舰产品,少儿都可以投保了！让客户全家享有“福”的保障。"
                android:textSize="12sp"
                />
			<TextView 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="少儿平安符是少儿专属综合保障计划，完美沿袭成人平安福的核心优势并增加了3项核心优势"
                android:textSize="12sp"
                />
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45种重疾保障终身"
                        android:drawableLeft="@drawable/children_pinganfu_point"
                        android:drawablePadding="10dp"
                        android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="8种轻度重疾20%独立给付"
                        android:drawableLeft="@drawable/children_pinganfu_point"
                        android:drawablePadding="10dp"
                        android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="公共交通、自驾自乘意外身故"
                        android:drawableLeft="@drawable/children_pinganfu_point"
                        android:drawablePadding="10dp"
                        android:textSize="12sp"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:text="双倍赔付"
                        android:paddingLeft="20dp"
                        android:textSize="12sp"/>
                    <TextView android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="false"
                        android:text="此外，新增10种少儿特定重疾，可额外获得独立肌肤1倍的基本保额"
                        android:drawableLeft="@drawable/children_pinganfu_point"
                        android:drawablePadding="10dp"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
				<ImageView android:layout_width="100dp"
                    android:layout_height="66dp"
                    android:src="@drawable/children_pinganfu_peitu"/>
				<ImageView android:layout_width="100dp"
				    android:layout_marginTop="10dp"
                    android:layout_height="66dp"
                    android:src="@drawable/children_pinganfu_peitu2"/>
				
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_marginTop="15dp"
	    android:background="#1f1f1f"/>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:onClick="baoXianLiNian"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
	        <ImageView 
	            android:src="@drawable/peace_menu"
	            android:layout_width="10dp"
	            android:layout_height="8dp"
	            android:layout_marginLeft="5dp"
	            android:layout_gravity="center_vertical"/>
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:text="保险理念"
	            android:singleLine="true"
	            android:textColor="#1f1f1f"
	            android:textSize="15sp"
	            android:gravity="center"/>
        </LinearLayout>
        <View 
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="#1f1f1f"
            android:layout_gravity="center_vertical"/>
		<LinearLayout 
            android:onClick="touBaoGuiZe"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:text="正确购买"
	            android:textColor="#1f1f1f"
	            android:singleLine="true"
	            android:textSize="15sp"
	            android:gravity="center"/>
		</LinearLayout>
        <View 
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="#1f1f1f"
            android:layout_gravity="center_vertical"/>
		<TextView 
            android:onClick="chanPinTeSe"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="产品特色"
			android:textSize="15sp"
            android:textColor="#1f1f1f"
            android:gravity="center"/>
        <View 
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="#1f1f1f"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:onClick="sheJiJiHuaShu"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
			android:textSize="15sp"
            android:text="设计计划书"
            android:singleLine="true"
            android:textColor="#1f1f1f"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>