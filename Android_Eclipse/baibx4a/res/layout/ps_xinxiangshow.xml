                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:text="(保单期满后，按保额双倍额领取）"
                        android:textColor="#008000"
                        android:textSize="7sp" />
                </LinearLayout>
