                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="到S+N岁     2*中 "
                        android:textColor="#008000"
                        android:textSize="14sp" />

                    <TextView
