<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox android:textSize="12sp"
            android:id="@+id/cb_mycard_right_row16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="理财规划师编辑完成-16"
            android:textColor="#000000" />

        <CheckBox android:textSize="12sp"
            android:id="@+id/cb_mycard_left_row16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="没有该项荣誉"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mycard_row16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mycard_back" >

        <TextView
            android:id="@+id/tv_p16_t1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_mycard_p16_v1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="p16_t1"
            android:text="可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑可编辑"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_mycard_p16_v1"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/tv_p16_t1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:background="@drawable/mycard_p16_v1"
            android:clickable="true"
            android:onClick="p16_v1" />
    </RelativeLayout>
</LinearLayout>