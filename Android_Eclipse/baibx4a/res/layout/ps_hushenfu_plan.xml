<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0EFF5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#2299EE"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/huShenFuBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/shouhuxing_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:text="护身福综合保障计划"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/shouHuXingMenu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/shouhuxing_menu" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scorllView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout style="@style/scrollLinear" >

            <TextView
                style="@style/redTitle"
                android:text="@string/JiBenQingKuang" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:layout_weight="4"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/greyTV"
                        android:text="姓名" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:singleLine="true"
                        android:background="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/greyTV"
                        android:text="性别" />

                    <RadioGroup
                        android:id="@+id/sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/maleRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/femaleRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/greyTV"
                        android:text="年龄" />

                    <Spinner
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:prompt="@string/age"
                        android:spinnerMode="dialog" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/redTitle"
                android:text="护身福终身保险" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:text="交费年期"
                        android:textColor="#8E8E8E"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/period"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:prompt="@string/jiaoFeiNianQi"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/greyTV"
                        android:text="保额" />

                <EditText android:maxLength="6"
                    android:id="@+id/baoE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@null"
                    android:inputType="number"  />
            <TextView
                android:text="万元"
                style="@style/greyTV"
                /> 
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/redTitle"
                android:text="附加护身福提前给付重大疾病保险" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    style="@style/greyTV"
                    android:text="保额" />

                <EditText android:maxLength="6"
                    android:id="@+id/jiBingBaoE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@null"
                    android:inputType="number"  />
            <TextView
                android:text="万元"
                style="@style/greyTV"
                /> 
            </LinearLayout>

            <TextView
                style="@style/redTitle"
                android:text="附加长期意外险" />

                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    style="@style/greyTV"
                    android:text="保额" />

                <EditText android:maxLength="6"
                    android:id="@+id/yiWaiBaoE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@null"
                    android:inputType="number"  />
            <TextView
                android:text="万元"
                style="@style/greyTV"
                />
            </LinearLayout>
                

                <TextView
                    style="@style/redTitle"
                    android:text="@string/FenHongShuiPing" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#DDDDDD"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/fenHongShuiPingLow"
                        style="@style/blackTV"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/FenHongShuiPing_low" />

                    <TextView
                        android:id="@+id/fenHongShuiPingMiddle"
                        style="@style/blackTV"
                        android:layout_weight="1"
                        android:background="#F3C095"
                        android:gravity="center"
                        android:text="@string/FenHongShuiPing_middle" />

                    <TextView
                        android:id="@+id/fenHongShuiPingHigh"
                        style="@style/blackTV"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/FenHongShuiPing_high" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/ageShow"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="0岁"
                            android:textColor="#e94820" />

                        <TextView
                            android:layout_width="2dp"
                            android:layout_height="fill_parent" />

                        <TextView
                            android:id="@+id/sexShow"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="男性"
                            android:textColor="#e94820" />

                        <TextView
                            android:layout_width="2dp"
                            android:layout_height="fill_parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="计划书预览"
                            android:textColor="#e94820" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="120dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <ImageView
                                style="@style/showImage"
                                android:src="@drawable/hsf_zhuxian" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="6"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/baoXianProductTitle"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical"
                                    android:text="护身福终身保险"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保额：" />

                                    <TextView
                                        android:id="@+id/zhuXianBaoEShow"
                                        style="@style/blackTV"
                                        android:text="1000元" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="交费年期：" />

                                    <TextView
                                        android:id="@+id/zxPeriodShow"
                                        style="@style/blackTV"
                                        android:text="10年" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保费：" />

                                    <TextView
                                        android:id="@+id/zxBaoFeiShow"
                                        style="@style/blackTV"
                                        android:text="243.80元" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView style="@style/lineImage" >
                        </ImageView>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="120dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <ImageView
                                style="@style/showImage"
                                android:src="@drawable/hsf_zhongji" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="6"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical"
                                    android:text="附加护身福提前给付重大疾病保险（2015）"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保额：" />

                                    <TextView
                                        android:id="@+id/zhongJiBaoEShow"
                                        style="@style/blackTV"
                                        android:text="1000元" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:layout_width="match_parent"
                                        android:text="交费年期：" />

                                    <TextView
                                        android:id="@+id/zjPeriodShow"
                                        style="@style/blackTV"
                                        android:text="10年" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保费：" />

                                    <TextView
                                        android:id="@+id/zjBaoFeiShow"
                                        style="@style/blackTV"
                                        android:text="243.80元" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView style="@style/lineImage" >
                        </ImageView>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="120dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <ImageView
                                style="@style/showImage"
                                android:src="@drawable/hsf_huomian" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="6"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical"
                                    android:text="附加豁免保险费重大疾病保险（C，加强版）"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保额：" />

                                    <TextView
                                        android:id="@+id/huoMianBaoEShow"
                                        style="@style/blackTV"
                                        android:text="1000元" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="交费年期：" />

                                    <TextView
                                        android:id="@+id/hmPerioidShow"
                                        style="@style/blackTV"
                                        android:text="10年" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保费：" />

                                    <TextView
                                        android:id="@+id/hmBaoFeiShow"
                                        style="@style/blackTV"
                                        android:text="243.80元" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView style="@style/lineImage" >
                        </ImageView>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="120dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <ImageView
                                style="@style/showImage"
                                android:src="@drawable/hsf_yiwai" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="6"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical"
                                    android:text="附加长期意外伤害保险（2013）"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保额：" />

                                    <TextView
                                        android:id="@+id/yiWaiBaoEShow"
                                        style="@style/blackTV"
                                        android:text="1000元" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="交费年期：" />

                                    <TextView
                                        android:id="@+id/ywPerioidShow"
                                        style="@style/blackTV"
                                        android:text="10年" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        style="@style/blackTV"
                                        android:text="保费：" />

                                    <TextView
                                        android:id="@+id/ywBaoFeiShow"
                                        style="@style/blackTV"
                                        android:text="243.80元" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <include layout="@layout/ps_plan_account"/>
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/ps_plan_confirm"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>