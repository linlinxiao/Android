<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 1 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- 3 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#F3BA6D"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/psShouHuXImageView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_1_1" />

            <TextView
                android:id="@+id/psShouHuXTextView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/psShouHuXImageView1"
                android:text="@string/psShouHuXTextView1"
                android:textSize="7sp" />
            <TextView
                android:id="@+id/psShouHuXTextView2"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_above="@id/psShouHuXTextView1"
                android:paddingBottom="5dp"
                android:text="@string/psShouHuXTextView2"
                android:textSize="6sp" />
            
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/psShouHuXTextView2"
                android:layout_above="@id/psShouHuXTextView1"
                >
                <TextView 
                    android:id="@+id/textView1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img2_1"
                    android:layout_alignParentBottom="true"
                    />
                <TextView 
                    android:id="@+id/textView2"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img2_1"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/textView1"
                    />
                <TextView 
                    android:id="@+id/textView3"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img2_1"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/textView2"
                    />
                <TextView 
                    android:id="@+id/textView4"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img2_1"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/textView3"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 4 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#A9D469"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/psShouHuXImageView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_1_3" />

            <TextView
                android:id="@+id/baoDanLeijiHongLiBaoXianJinErTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/psShouHuXImageView3"
                android:gravity="right"
                android:text="@string/baoDanLeijiHongLiBaoXianJinEr"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@id/baoDanLeijiHongLiBaoXianJinErTextView"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/psShouHuXImageView10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:src="@drawable/zhongshenfenhongimg1" />

                <ImageView
                    android:id="@+id/psShouHuXImageView11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/img_1_11" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- 2 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#aa00aa"
        android:orientation="horizontal" >

        <!-- 3 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#A9D469"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/psShouHuXImageView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/img_1_2" />

            <LinearLayout
                android:id="@+id/psShouHuXShow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/psShouHuXImageView2"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <ImageView
                    android:id="@+id/psShouHuXImageView5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/tiqianyanglao1_3" />

                <ImageView
                    android:id="@+id/psShouHuXImageView6"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:src="@drawable/tiqianyanglao2_3" />

                <ImageView
                    android:id="@+id/psShouHuXImageView7"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:src="@drawable/tiqianyanglao3_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/psShouHuXShow"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qiTaQuanYi1"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qiTaQuanYi2"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qiTaQuanYi3"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
        <!-- 4 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#F3BA6D"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/psShouHuXImageView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/img_1_4" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/psShouHuXImageView4"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <ImageView
                    android:id="@+id/psShouHuXImageView8"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/img_1_8" />

                <ImageView
                    android:id="@+id/psShouHuXImageView9"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/img_1_9" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>