<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.linlin.animation.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScaleAnimation(缩放动画)"
        android:id="@+id/scaleBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="clickedButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlphaAnimation(透明度动画)"
        android:id="@+id/alphaBtn"
        android:layout_below="@+id/scaleBtn"
        android:layout_alignRight="@+id/scaleBtn"
        android:layout_alignEnd="@+id/scaleBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickedButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RotateAnimation(旋转动画)"
        android:id="@+id/rotateBtn"
        android:layout_below="@+id/alphaBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/alphaBtn"
        android:layout_alignEnd="@+id/alphaBtn"
        android:onClick="clickedButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TranslateAnimation(位移动画)"
        android:id="@+id/translateBtn"
        android:layout_below="@+id/rotateBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/rotateBtn"
        android:layout_alignEnd="@+id/rotateBtn"
        android:onClick="clickedButton"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/translateBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="续播１"
            android:id="@+id/continueBtn1"
            android:layout_weight="1"
            android:onClick="clickedButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="续播２"
            android:id="@+id/continueBtn2"
            android:layout_weight="1"
            android:onClick="clickedButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪烁"
            android:id="@+id/twinkleBtn"
            android:layout_weight="1"
            android:onClick="clickedButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抖动"
            android:id="@+id/shakeBtn"
            android:layout_weight="1"
            android:onClick="clickedButton"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换动画"
            android:id="@+id/cutBtn"
            android:layout_weight="1"
            android:onClick="clickedButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布局动画"
            android:id="@+id/layoutBtn"
            android:layout_weight="1"
            android:onClick="clickedButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="逐帧动画"
            android:id="@+id/frameBtn"
            android:layout_weight="1"
            android:onClick="clickedButton"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_launcher" />
</RelativeLayout>
